{
  "name": "job-controller",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "yarn run deploy:example-flaky-job && yarn run deploy:maki && yarn run deploy:main",
    "deploy:main": "npx wrangler deploy",
    "deploy:maki": "npx wrangler deploy -c ./packages/maki/wrangler.toml",
    "deploy:example-flaky-job": "npx wrangler deploy -c ./jobs/example-flaky-job/wrangler.toml",
    "dev": "npx concurrently -n example-flaky-job,maki,main -k \"yarn run dev:example-flaky-job\" \"sleep 2 && yarn run dev:maki\" \"sleep 4 && yarn run dev:main\"",
    "dev:main": "npx wrangler dev --port 9000",
    "dev:maki": "npx wrangler dev -c ./packages/maki/wrangler.toml --port 9001",
    "dev:example-flaky-job": "npx wrangler dev -c ./jobs/example-flaky-job/wrangler.toml --port 9002",
    "tail": "npx concurrently -n example-flaky-job,maki,main -k \"yarn run tail:example-flaky-job\" \"yarn run tail:maki\" \"yarn run tail:main\"",
    "tail:main": "npx wrangler tail",
    "tail:maki": "npx wrangler tail -c ./packages/maki/wrangler.toml",
    "tail:example-flaky-job": "npx wrangler tail -c ./jobs/example-flaky-job/wrangler.toml",
    "start": "wrangler dev",
    "test": "vitest"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.1.0",
    "@cloudflare/workers-types": "^4.20240405.0",
    "prettier": "^3.2.5",
    "prisma": "^5.12.1",
    "typescript": "^5.0.4",
    "vitest": "1.3.0",
    "wrangler": "^0.0.0-d27c287a"
  },
  "dependencies": {
    "@prisma/adapter-d1": "^5.12.1",
    "@prisma/client": "5.12.1",
    "hono": "^4.2.2",
    "zod": "^3.22.4"
  }
}
