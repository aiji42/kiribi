{
  "name": "kiribi",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "yarn run build:client && yarn run deploy:example-flaky-job && yarn run deploy:kiribi",
    "deploy:kiribi": "npx wrangler deploy -c packages/kiribi/wrangler.toml",
    "deploy:example-flaky-job": "npx wrangler deploy -c ./jobs/example-flaky-job/wrangler.toml",
    "build:client": "cd packages/client && yarn build",
    "dev": "npx concurrently -n example-flaky-job,kiribi,client -k \"yarn run dev:example-flaky-job\" \"sleep 2 && yarn run dev:kiribi\" \"sleep 4 && yarn dev:client\"",
    "dev:client": "cd packages/client && yarn dev",
    "dev:kiribi": "npx wrangler dev -c packages/kiribi/wrangler.toml --port 9001",
    "dev:example-flaky-job": "npx wrangler dev -c ./jobs/example-flaky-job/wrangler.toml --port 9002",
    "tail": "npx concurrently -n example-flaky-job,kiribi -k \"yarn run tail:example-flaky-job\" \"yarn run tail:kiribi\"",
    "tail:kiribi": "npx wrangler tail -c packages/kiribi/wrangler.toml",
    "tail:example-flaky-job": "npx wrangler tail -c ./jobs/example-flaky-job/wrangler.toml",
    "start": "wrangler dev",
    "test": "vitest"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240405.0",
    "prettier": "^3.2.5",
    "prisma": "^5.12.1",
    "typescript": "^5.0.4",
    "wrangler": "^0.0.0-d27c287a"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.1",
    "@prisma/adapter-d1": "^5.12.1",
    "@prisma/client": "5.12.1",
    "hono": "^4.2.2",
    "zod": "^3.22.4"
  }
}
