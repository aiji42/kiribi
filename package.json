{
  "name": "root",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "deploy:main": "yarn workspace kiribi deploy",
    "build": "yarn run build:client && yarn run build:main",
    "build:client": "yarn workspace client build",
    "build:main": "yarn workspace kiribi build",
    "dev": "npx concurrently -n worker,client -k \"yarn run dev:main\" \"sleep 2 && yarn dev:client\"",
    "dev:client": "yarn workspace client dev",
    "dev:main": "yarn workspace kiribi dev"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "workspaces": [
    "client",
    "main"
  ]
}
